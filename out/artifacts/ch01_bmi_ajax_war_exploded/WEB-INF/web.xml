<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>ProvinceServlet</servlet-name>
        <servlet-class>com.ajax.controller.ProvinceServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProvinceServletJson</servlet-name>
        <servlet-class>com.ajax.controller.ProvinceServletJson</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProvinceServletJson</servlet-name>
        <url-pattern>/findProvinceByJson</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProvinceServlet</servlet-name>
        <url-pattern>/findProvince</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>province_json.jsp</welcome-file>
    </welcome-file-list>
</web-app>